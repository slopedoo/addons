<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
	<Frame name="AWMReadyCheckMenu" toplevel="true" parent="AWMMainMenu" hidden="true" movable="true" frameStrata="HIGH">
		<Scripts>
			<OnLoad>
				AWMReadyCheckMenuOnLoad()
			</OnLoad>
			<OnShow>
				this:SetScript('OnUpdate',AWMReadyCheckOnUpdate)
			</OnShow>
			<OnHide>
				this:SetScript('OnUpdate',nil)
				this:Hide()
			</OnHide>
			<OnMouseDown>
				AWMMainMenu:StartMoving()
			</OnMouseDown>
			<OnMouseUp>
				AWMMainMenu:StopMovingOrSizing()
			</OnMouseUp>
		</Scripts>
		<Anchors>
			<Anchor point="CENTER"></Anchor>
		</Anchors>
		<Size>
			<AbsDimension x="300" y="400" />
		</Size>
		<Backdrop bgFile="Interface\AddOns\AnaronsWoWMod\ReadyCheck\ReadyCheckMenu" edgeFile="Interface\Tooltips\UI-Tooltip-Border">
			<EdgeSize>
				<AbsValue val="25" />
			</EdgeSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5" />
			</BackgroundInsets>
		</Backdrop>
		<Frames>
			<Button name="$parentCloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT">
					<Offset>
						<AbsDimension x="-3" y="-3"/>
					</Offset>
					</Anchor>
				</Anchors>
			</Button>
		</Frames>
	</Frame>		
</Ui>
