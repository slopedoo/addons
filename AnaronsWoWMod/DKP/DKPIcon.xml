<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/">
	<Frame name="AWMDKPButton" toplevel="true" parent="AWMMainMenu" hidden="false" movable="true">
		<Scripts>
			<OnMouseDown>
				ShowUIPanel(AWMMainMenu)
				ShowUIPanel(AWMDKPMenu)
			</OnMouseDown>
			<OnLoad>
				AWMLoadIcon(this,'misc')
			</OnLoad>
			<OnEnter>
				GameTooltip:SetOwner(this, "ANCHOR_LEFT");
				GameTooltip:SetText("DKP Menu");
				GameTooltip:AddLine('You have '..get(AWMDKP,UnitName('player'),0)..' DKP.', 1,1,1)
				GameTooltip:Show()
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
		</Scripts>
		<Size>
			<AbsDimension x="30" y="30" />
		</Size>
		<Anchors>
			<Anchor point="TOP">
			<Offset>
				<AbsDimension x="-35" y="-58"/>
			</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<Texture file="Interface\Icons\INV_Misc_Coin_01">
					<Size>
						<AbsDimension x="30" y="30" />
					</Size>
					<Anchors>
						<Anchor point="CENTER">
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Frame>				
</Ui>
